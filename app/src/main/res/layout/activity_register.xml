<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="space.levan.memory.view.activity.LoginActivity">

    <ImageView
        android:src="@drawable/ic_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"/>

    <EditText
        android:id="@+id/et_nickname"
        android:gravity="center"
        android:textSize="16sp"
        android:hint="@string/register_nickname"
        android:textColorHint="@color/colorTips"
        android:maxLines="1"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="@color/colorSplit" />

    <EditText
        android:id="@+id/et_email"
        android:gravity="center"
        android:textSize="16sp"
        android:hint="@string/register_email"
        android:textColorHint="@color/colorTips"
        android:maxLines="1"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/colorSplit"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/et_password"
        android:gravity="center"
        android:textSize="16sp"
        android:hint="@string/register_password"
        android:textColorHint="@color/colorTips"
        android:maxLines="1"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/colorSplit"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_login"
            android:text="@string/register_login"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_register"
        android:text="@string/register_register"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_btn_ripple"/>

</LinearLayout>
