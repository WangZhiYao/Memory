<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"/>

    <EditText
        android:id="@+id/et_register_nickname"
        android:gravity="center"
        android:textSize="16sp"
        android:hint="@string/ac_register_username"
        android:textColorHint="@color/colorTips"
        android:maxLines="1"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="@color/colorSplit" />

    <EditText
        android:id="@+id/et_register_email"
        android:gravity="center"
        android:textSize="16sp"
        android:hint="@string/ac_register_email"
        android:textColorHint="@color/colorTips"
        android:maxLines="1"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/colorSplit"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/et_register_password"
        android:gravity="center"
        android:textSize="16sp"
        android:hint="@string/ac_register_password"
        android:textColorHint="@color/colorTips"
        android:maxLines="1"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@color/colorSplit"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_register_login"
            android:text="@string/ac_register_login"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register_sign_up"
        android:text="@string/ac_register_sign_up"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_btn_ripple"/>

</LinearLayout>
