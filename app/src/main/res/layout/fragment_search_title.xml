<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_search_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/fg_search_title_back"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_left" />

    <EditText
        android:id="@+id/et_search_keywords"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:background="@drawable/ic_et_shape"
        android:drawablePadding="8dp"
        android:drawableStart="@mipmap/ic_search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:labelFor="@+id/et_search_keywords"
        android:maxLines="1"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_search_scan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/fg_search_title_scan"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_scan" />

</LinearLayout>