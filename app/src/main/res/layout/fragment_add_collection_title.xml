<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_add_collection_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/fg_add_collection_title_back"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_left" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="@string/fg_add_collection_title_add"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/iv_add_collection_excel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/fg_add_collection_title_excel"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_excel" />

</LinearLayout>