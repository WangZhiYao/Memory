<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_main_logout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/fg_main_title_logout"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_logout" />

    <ImageView
        android:id="@+id/iv_main_add"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/fg_main_title_add"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="@string/fg_main_title"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/iv_main_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/fg_main_title_search"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_search_white" />

    <ImageView
        android:id="@+id/iv_main_scan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/fg_main_title_scan"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_scan" />

</LinearLayout>