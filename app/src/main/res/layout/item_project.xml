<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="基于文本的辅助信息提取APP"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/tv_project_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_project_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="未完成"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_project_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_project_start_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/project_start_time_hint"
        app:layout_constraintStart_toStartOf="@id/tv_project_name"
        app:layout_constraintTop_toBottomOf="@id/tv_project_name" />

    <TextView
        android:id="@+id/tv_project_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-10-01"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_project_start_time_hint"
        app:layout_constraintStart_toEndOf="@id/tv_project_start_time_hint" />

    <TextView
        android:id="@+id/tv_project_end_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/project_end_time_hint"
        app:layout_constraintStart_toStartOf="@id/tv_project_start_time_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_project_start_time_hint" />

    <TextView
        android:id="@+id/tv_project_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-12-02"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_project_end_time_hint"
        app:layout_constraintStart_toEndOf="@id/tv_project_end_time_hint" />

    <TextView
        android:id="@+id/tv_project_member_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/project_member_hint"
        app:layout_constraintStart_toStartOf="@id/tv_project_end_time_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_project_end_time_hint" />

    <TextView
        android:id="@+id/tv_project_member"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:text="王致尧"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_project_member_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_project_member_hint" />

    <TextView
        android:id="@+id/tv_project_notes_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/project_notes_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_project_member_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_project_member_hint" />

    <TextView
        android:id="@+id/tv_project_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:text="毕业设计"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_project_notes_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_project_notes_hint" />

</android.support.constraint.ConstraintLayout>