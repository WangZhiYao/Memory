<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_reset_password_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="64dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_reset_password_email"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorInputBackground"
        android:gravity="center"
        android:hint="@string/reset_password_email"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_reset_password_logo" />

    <TextView
        android:id="@+id/tv_reset_password_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/reset_password_back"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/et_reset_password_email"
        app:layout_constraintTop_toBottomOf="@+id/et_reset_password_email" />

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="248dp"
        android:layout_height="56dp"
        android:layout_marginTop="186dp"
        android:background="@drawable/shape_btn_sign_in"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/reset_password"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reset_password_email" />

</android.support.constraint.ConstraintLayout>