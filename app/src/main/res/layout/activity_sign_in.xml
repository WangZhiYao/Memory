<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_sign_in_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="64dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_sign_in_email"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorInputBackground"
        android:gravity="center"
        android:hint="@string/sign_in_hint_email"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_sign_in_logo" />

    <EditText
        android:id="@+id/et_sign_in_password"
        android:layout_width="248dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorInputBackground"
        android:gravity="center"
        android:hint="@string/sign_in_hint_password"
        android:textSize="16sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_in_email" />

    <TextView
        android:id="@+id/tv_sign_in_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sign_in_hint_register"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/et_sign_in_password"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_in_password" />

    <TextView
        android:id="@+id/tv_sign_in_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sign_in_hint_reset_password"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/et_sign_in_password"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_in_password" />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="248dp"
        android:layout_height="56dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/shape_btn_sign_in"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/sign_in_hint_login"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_sign_in_password" />


</android.support.constraint.ConstraintLayout>